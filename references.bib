@article{peigneux_are_2004,
	title = {Are spatial memories strengthened in the human hippocampus during slow wave sleep?},
	volume = {44},
	issn = {08966273},
	doi = {10.1016/j.neuron.2004.10.007},
	abstract = {In rats, the firing sequences observed in hippocampal ensembles during spatial learning are replayed during subsequent sleep, suggesting a role for posttraining sleep periods in the offline processing of spatial memories. Here, using regional cerebral blood flow measurements, we show that, in humans, hippocampal areas that are activated during route learning in a virtual town are likewise activated during subsequent slow wave sleep. Most importantly, we found that the amount of hippocampal activity expressed during slow wave sleep positively correlates with the improvement of performance in route retrieval on the next day. These findings suggest that learning-dependent modulation in hippocampal activity during human sleep reflects the offline processing of recent episodic and spatial memory traces, which eventually leads to the plastic changes underlying the subsequent improvement in performance.},

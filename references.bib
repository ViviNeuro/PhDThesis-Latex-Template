	keywords = {Delta wave, {EEG}, Memory, Neuroimaging, Non-{REM} sleep, {PET}, {REM} sleep, Sensory processing, Sleep, Slow oscillation, Spindle, {fMRI}},
}

@article{miyauchi_human_2009,
